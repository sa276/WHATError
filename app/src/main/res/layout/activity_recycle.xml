<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".recycle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="25dp"
            >




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="300dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="300dp"
                    app:lottie_loop="true"
                    android:id="@+id/bucket"
                    app:lottie_autoPlay="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_fileName="shower_bucket.json"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hola_text"
                    android:text="TIP 1"
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/bucket"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user"
                    android:text=""
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/hola_text"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote"
                    android:text="Use a Shower Bucket"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/user"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_below="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="25dp"
            >




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="35dp"
                    app:lottie_loop="true"
                    android:id="@+id/rb"
                    app:lottie_autoPlay="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_fileName="rain_barrel.json"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hola_text2"
                    android:text="TIP 2"
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/rb"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user2"
                    android:text=""
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/hola_text2"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote2"
                    android:text="Install a Rain Barrel"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/user2"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_below="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="25dp"
            >




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="35dp"
                    app:lottie_loop="true"
                    android:id="@+id/tap"
                    app:lottie_autoPlay="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_fileName="tap.json"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hola_text3"
                    android:text="TIP 3"
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/tap"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user3"
                    android:text=""
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/hola_text3"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote3"
                    android:text="Water and soap used for cleaning cars can be drained into the shrubs or lawns."
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/user3"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_below="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="25dp"
            >




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="300dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="300dp"
                    app:lottie_loop="true"
                    android:id="@+id/plants"
                    app:lottie_autoPlay="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_fileName="plants.json"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hola_text4"
                    android:text="TIP 4"
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/plants"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user4"
                    android:text=""
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/hola_text4"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote4"
                    android:text="Collect the Overflow from Watering Plants."
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/user4"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view5"
            android:layout_below="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="25dp"
            >




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="300dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="300dp"
                    app:lottie_loop="true"
                    android:id="@+id/tub"
                    app:lottie_autoPlay="true"
                    android:layout_centerHorizontal="true"
                    app:lottie_fileName="tub.json"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hola_text5"
                    android:text="TIP 5"
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/tub"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user5"
                    android:text=""
                    android:textSize="35sp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/hola_text5"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote5"
                    android:text="Instead of using a dishwasher to clean utensils, one can use a plastic tub of water."
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="casual"
                    android:layout_below="@+id/user5"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>